{
  "name": "bricklayer/lay",
  "description": "A lite PHP builder meta-framework to get your projects up and running quickly",
  "keywords": ["bricklayer", "lay", "php bricklayer", "lite php framework", "metaframework", "fast php framework"],
  "type": "library",
  "license": "GPL-3.0",

  "scripts": {
    "post-autoload-dump": [
      "@php bob project:create --composer-install-on-directory"
    ],

    "post-update-cmd": [
      "@php bob project:create --composer-update"
    ],

    "post-create-project-cmd": [
      "@php bob project:create --fresh-project"
    ]
  },

  "require": {
    "php": ">8.1",
    "bricklayer/structure": "^0.2-alpha"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0-dev"
  }
}